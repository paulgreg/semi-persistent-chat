{
    "name": "semi-persistent-chat",
    "version": "0.1.0",
    "main": "dist/server/index.js",
    "license": "MIT",
    "engines": {
        "node": ">=22.0.0"
    },
    "type": "module",
    "scripts": {
        "analyze": "./node_modules/.bin/vite-bundle-visualizer",
        "dev:client": "vite",
        "dev:server": "DEBUG=chat tsx --watch src/server/index.ts",
        "browserlist": "./node_modules/.bin/browserslist --update-db",
        "config": "if [ ! -f ./src/settings.json ]; then cp ./src/settings.json.dist ./src/settings.json; fi;",
        "build": "npm run config && npm run build:server && npm run build:client",
        "build:server": "NODE_ENV=production vite build --outDir dist/server --ssr ./src/server/index.ts",
        "build:client": "NODE_ENV=production vite build --outDir dist/client",
        "start": "node dist/server/index.js",
        "test": "vitest --run",
        "tdd": "vitest",
        "lint": "eslint src",
        "format": "prettier -c src"
    },
    "pre-commit": [
        "format",
        "lint",
        "test"
    ],
    "dependencies": {
        "@emoji-mart/data": "^1.2.1",
        "@emoji-mart/react": "^1.1.1",
        "axios": "^1.13.2",
        "caniuse-lite": "^1.0.30001763",
        "charset": "^1.0.1",
        "cheerio": "^1.1.2",
        "debug": "^4.4.3",
        "emoji-mart": "^5.6.0",
        "express": "^5.2.1",
        "iconv-lite": "^0.7.2",
        "jschardet": "^3.1.4",
        "lru-cache": "^11.2.4",
        "morgan": "^1.10.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-favicon": "^2.0.7",
        "react-linkify": "^1.0.0-alpha",
        "smile2emoji": "^3.19.0",
        "socket.io": "^4.8.3",
        "socket.io-client": "^4.8.3",
        "tsx": "^4.21.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.32.0",
        "@testing-library/react": "^16.3.1",
        "@types/charset": "^1.0.5",
        "@types/debug": "^4.1.12",
        "@types/express": "^5.0.6",
        "@types/morgan": "^1.9.10",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@types/react-linkify": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint": "^9.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "globals": "^17.0.0",
        "jsdom": "^27.4.0",
        "nodemon": "^3.1.11",
        "pre-commit": "^1.2.2",
        "prettier": "^3.7.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1",
        "vite": "^7.3.1",
        "vite-bundle-visualizer": "^1.2.1",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "^4.0.16"
    }
}
